{
  "name": "items-api",
  "main": "build/index.js",
  "scripts": {
    "start": "npx tsc && node build/index.js --inspect",
    "barrels": "npx barrelsby --directory 'src/controllers' --location top --name barrel --delete",
    "generate-spec": "npm run barrels && swaggerGen -c ./swaggerConfig.json",
    "watch": "nodemon -x 'npm run generate-spec && npm run start'  --ignore build/spec --ignore src/controllers/barrel.ts --ext ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "@common/backend": "*",
    "typescript-rest": "^2.1.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "barrelsby": "^2.1.1",
    "eslint": "^5.16.0",
    "nodemon": "^1.19.1",
    "typescript": "^3.5.1",
    "typescript-rest-swagger": "^0.1.0"
  },
  "private": true,
  "version": "1.0.0"
}
