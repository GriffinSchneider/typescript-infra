{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/scripts",
      "packages/backend/*",
      "packages/mobile/",
      "packages/common/*",
      "packages/common/generated/*"
    ]
  },
  "scripts": {
    "preinstall": "node packages/scripts/preinstall.js",
    "postinstall": "node packages/scripts/postinstall.js",
    "build": "npx lerna run build",
    "watch": "node packages/scripts/build/watch.js",
    "lint": "eslint --ext=js,jsx,ts,tsx .",
    "inject-mobile-node-modules": "node packages/scripts/build/mobile-node-modules"
  },
  "devDependencies": {
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.3",
    "lerna": "^3.15.0",
    "ts-node": "^8.2.0"
  },
  "engines": {
    "node": ">=11.0.0"
  }
}
