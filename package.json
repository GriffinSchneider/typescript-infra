{
  "name": "root",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/scripts",
      "packages/backend/*",
      "packages/common/*",
      "packages/common/build/api-clients/*"
    ]
  },
  "scripts": {
    "bootstrap": "node packages/scripts/bootstrap.js",
    "generate-api-clients": "npx ts-node packages/scripts/generate-api-clients",
    "watch-api-clients": "nodemon -q -x 'npm run generate-api-clients' --ext json --watch './packages/common/build/api-specs'",
    "watch": "npx ts-node packages/scripts/watch.ts",
    "lint": "eslint --ext=js,jsx,ts,tsx ."
  },
  "devDependencies": {
    "@types/lodash": "^4.14.134",
    "@types/node": "^12.0.7",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "eslint": "^5.16.0",
    "eslint-plugin-import": "^2.17.3",
    "lerna": "^3.15.0",
    "nodemon": "^1.19.1",
    "small-swagger-codegen": "^1.15.2",
    "ts-node": "^8.2.0",
    "typescript": "^3.5.2"
  }
}
